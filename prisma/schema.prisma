generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName String?
  lastName  String?



  Products Products[]
  @@map("users")
}


model Products {
  id          String   @id @unique @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String
  title       String
  description String?
  rentPrice   Int
  buyPrice    Int
  images      String[]
  quantity    Int
  isAvailable Boolean
  availableFrom String
  availableTill String
  userId        String
  user          User   @relation(fields: [userId], references: [id])

  category      String
  subCategory1  String?
  subCategory2  String?
  subCategory3  String?
  // user   User @relation(fields: [userId], references: [id])


}
